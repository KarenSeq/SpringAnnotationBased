<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xmlns:aop = "http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context.xsd
   http://www.springframework.org/schema/aop 
   http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<context:annotation-config />
	<aop:aspectj-autoproxy/>
	
	<bean id="book1" class="com.learn.spring.annotation.model.Book">
	</bean>

	<bean id="novel1" class="com.learn.spring.annotation.model.Novel">
	</bean>

	<bean id="autobiography1"
		class="com.learn.spring.annotation.model.Autobiography">
	</bean>

	<bean id="academics1"
		class="com.learn.spring.annotation.model.Academics">
		<property name="title" value="Power Electronics"></property>
	</bean>
	
	<bean id="log1"
		class="com.learn.spring.annotation.log.model.Log">
	</bean>
	
	<bean id="logging1"
		class="com.learn.spring.annotation.log.Logging">
	</bean>


</beans>